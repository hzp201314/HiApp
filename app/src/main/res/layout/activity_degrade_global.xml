    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".route.DegradeGlobalActivity">

    <com.hzp.common.ui.view.IconFontTextView
        android:id="@+id/action_back"
        android:layout_width="@dimen/dp_45"
